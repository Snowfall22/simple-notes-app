<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Quick Notes</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kalam:wght@700&display=swap" rel="stylesheet">
  </head>
  <body>
    <h1>Notes App</h1>
    <form class="add-note" action="/" method="post">
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Enter Title" name="title">
        <textarea class="form-control" rows="3" placeholder="Enter Content" name="content"></textarea>
        <button type="submit" class="btn btn-warning" align="center">+</button>
      </div>
    </form>

    <div class="row">
      <% for(let i=0; i< list.length; i++){ %>
        <div class="col-md-3 col-sm-12">
          <div class="card">

            <ul class="list-group list-group-flush">
              <li class="list-group-item"><%= list[i].title %></li>
              <li class="list-group-item"><%= list[i].content %></li>

            </ul>
          </div>
        </div>
      <%  } %>
    </div>

    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
